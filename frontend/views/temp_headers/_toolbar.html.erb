<% if user_can?('administer_system') %>
  <div class="record-toolbar d-flex align-items-center">
    <% if ['edit', 'update'].include?(controller.action_name) %>
      <div class="save-changes">
        <button type="submit" class="btn btn-primary btn-sm"><%= I18n.t("actions.save_prefix") %></button>
      </div>
    <% else %>
    <div class="btn-group">
      <%= link_to I18n.t("actions.edit"), {:controller => :temp_headers, :action => :edit, :id => @temp_header.id}, :class => "btn btn-sm btn-primary" %>
    </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
<% end %>

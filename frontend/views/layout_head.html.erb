<%= stylesheet_link_tag "#{@base_url}/assets/css/si_header.css" %>
<%= javascript_include_tag "#{@base_url}/assets/javascripts/closed_state.js?v=1" %>

<% temp_header = JSONModel(:temp_header).all.first %>
<div id="toggle-temp-header" <% unless temp_header['show_header'] %> style="display: none;" <% end %>>
  <div id="unhide-alert" style="display: none;" class="rounded-bottom shadow-sm">
    <button href="javascript:void(0)" id="showHeader" label="Show alert">
      Show alert
    </button>
  </div>

  <div class="container-fluid global-header alert-danger" id="temp-header">
    <div class="alert with-hide-alert">
      <a href="javascript:void(0)" class="hide-alert" id="closeHeader" aria-label="Close Alert">
        <span class="glyphicon glyphicon-remove">
        </span>
      </a>

      <p><b><%= TempHeaderHelper::short_date(temp_header['notice_date']) %></b>: ArchivesSpace will be undergoing planned maintenance on 
      <%= TempHeaderHelper::long_date(temp_header['maintenance_start']) %> from <%= TempHeaderHelper::long_time(temp_header['maintenance_start']) %> until
      <%= TempHeaderHelper::long_time(temp_header['maintenance_end']) %>.</p>

      <p><%= temp_header['maintenance_message'] %></p>
    </div>
  </div>
</div>
